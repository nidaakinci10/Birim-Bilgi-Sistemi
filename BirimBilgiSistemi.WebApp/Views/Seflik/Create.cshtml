@model BirimBilgiSistemi.WebApp.Models.SeflikViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-body">
                    <h4 class="card-title">Şeflik Ekle</h4>
                    <div class="form-group">
                        <hr />

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="form-group row">
                            @Html.LabelFor(model => model.BaskanlikViewModel.Ad, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownList("BaskanlikId", null, "Seciniz", htmlAttributes: new { @class = "select2 form-control custom-select select2-hidden-accessible col-md-12" })
                              
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.MudurlukViewModel.Isim, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownList("MudurlukId",null, "Seciniz", htmlAttributes: new { @class = "select2 form-control custom-select select2-hidden-accessible col-md-12" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Isim, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Isim, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2 m-t-15">
                                <button type="submit" class="btn btn-success">Ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

