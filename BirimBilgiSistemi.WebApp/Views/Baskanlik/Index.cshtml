<body id="page-top">
        
        <div class="card shadow mb-4">
            
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Başkanlıklar</h6>
            </div>
            <div class="card-body">
                <p>
                    <a href="~/Baskanlik/Create" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ekle</a>
                </p>

                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
