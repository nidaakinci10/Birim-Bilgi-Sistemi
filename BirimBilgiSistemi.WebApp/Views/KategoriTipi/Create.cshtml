@model BirimBilgiSistemi.WebApp.Models.KategoriTipiViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-group row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategori Ekle </h4>
                <div class="form-group">
                    <hr />
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <label class="col-md-2 m-t-15">Kategori Türü</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.KategoriTipi, new { htmlAttributes = new { @class = "form-control m-t-15" } })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 m-t-15">Renk Kodu</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.RenkKodu, new { htmlAttributes = new { @class = " form-control demo", @id = "RenkKodu" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2 m-t-15">
                        <button type="submit" class="btn btn-success">Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}