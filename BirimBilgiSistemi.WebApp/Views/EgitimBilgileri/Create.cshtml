@model BirimBilgiSistemi.WebApp.Models.EgitimBilgileriViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-group row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Eğitim Ekle </h4>
                <div class="form-group">
                    <hr />
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        @Html.LabelFor(model => model.PersonelViewModel.ad, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.DropDownList("personelId", null, "Seciniz", htmlAttributes: new { @class = "select2 form-control custom-select select2-hidden-accessible col-md-12" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.egitimTuru, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.DropDownList("egitimTuru", new List<SelectListItem> {
                                                             new SelectListItem { Text = "Lise", Value = "Lise"},
                                                             new SelectListItem { Text = "Üniversite", Value = "Üniversite"},
                                                             new SelectListItem { Text = "Yüksek Lisans", Value = "Yüksek Lisans"},
                                                             new SelectListItem { Text= "Doktora", Value= "Doktora"}
                           }, "Eğitim Türü", htmlAttributes: new { @class = "select2 form-control custom-select select2-hidden-accessible col-md-12" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.okulAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.okulAdi, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.okulBolum, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.okulBolum, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.mezuniyetYili, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                        @Html.EditorFor(model => model.mezuniyetYili, new { htmlAttributes = new { @class = "form-control"} })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-2 m-t-15">
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>    
</div>          
}
