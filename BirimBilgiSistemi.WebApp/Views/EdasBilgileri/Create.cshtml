@model  BirimBilgiSistemi.WebApp.Models.EdasBilgileriViewModel
@{
    ViewBag.Title = "Edaş Bilgi Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edaş Bilgi Ekle </h4>
                    <div class="form-group">
                        <hr />
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                       
                        <div class="form-group row">
                            @Html.LabelFor(model => model.dagitimSirketi, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.dagitimSirketi, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="from-group row">
                            @Html.LabelFor(model => model.sorumluIl, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.sorumluIl, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="from-group row">
                            @Html.LabelFor(model => model.baglantiDurumu, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.baglantiDurumu, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="from-group row">
                            @Html.LabelFor(model => model.adres, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.adres, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="from-group row">
                            @Html.LabelFor(model => model.kepAdresi, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.kepAdresi, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2 m-t-15">
                                <button type="submit" class="btn btn-success">Ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
