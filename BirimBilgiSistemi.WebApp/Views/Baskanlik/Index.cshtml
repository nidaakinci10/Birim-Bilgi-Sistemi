<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "ajax": {
                "url": "/baskanlik/sayfa",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "Ad", "name": "Ad", "autoWidth": true }
               
            ],
            "serverSide": "true",
            "order": [0, "asc"],
            "processing": "true",
            "language": {
                "processing": "Yükleniyor... Lütfen Bekleyin"
            }

        });
    });
</script> 